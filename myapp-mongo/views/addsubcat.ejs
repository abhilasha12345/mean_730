<% include header %>
	
<% include adminnav %>

<div id="page">
<center>
<h1>Add Sub-Category Here!!!</h1>		
<br>
<font color="orange"><%= output %></font>

<form method='post' action='/admin/addsubcat' enctype="multipart/form-data">
<table  cellspacing='10'>
	<tr>
		<td>Select Category</td>
		<td>
		<select name="catnm">
		<option>Select Category</option>
		<% for(let i in clist ) { %>
		<option><%= clist[i].catnm %></option>
		<% } %>
		</select>
		</td>	
	</tr>
	<tr>
		<td>Sub Category Name</td>
		<td><input type="text" name="subcatnm" placeholder="Enter Category Name" /></td>	
	</tr>
	<tr>
		<td>Sub Category Icon</td>
		<td><input type="file" name="subcaticon"/></td>	
	</tr>
	<tr>
		<td><input type='submit' value='Add Sub Category' /></td>	
	</tr>
</table>
</form>

</center>
</div>
<!-- page ends -->


</div>
<!-- wrapper ends -->



<% include footer %>


